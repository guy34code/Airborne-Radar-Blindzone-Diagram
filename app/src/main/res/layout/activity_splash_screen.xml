<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Airborne Radar Blindzone Diagram"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="50dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textAllCaps="true" />


    <ImageView
        android:layout_below="@+id/text"
        android:id="@+id/imageView1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/image2"
        android:rotation="90"/>

    <ImageView

        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_above="@+id/orgname"
        android:layout_centerHorizontal="true"
        android:src="@drawable/issa" />

    <TextView
        android:id="@+id/orgname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:text="Institute for Systems Studies and Analyses \nDefence Research and Development Organization"/>
</RelativeLayout>